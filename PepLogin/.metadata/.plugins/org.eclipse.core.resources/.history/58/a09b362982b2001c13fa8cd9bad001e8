package com.ConceJvaa;

public class CountOfStringDemo {

	public static void main(String[] args) {
		
		String s="hello world kaise vvv ho";
		System.out.println(s.toUpperCase());
		String s1[]=s.split(" ");
		String ss="";
		int count =0;
		for(String i:s1)
		{
			//System.out.print("  "+i);
			ss=ss+i;
			count++;
		}
		System.out.println(count);

	}

}
